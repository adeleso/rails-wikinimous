
<nav class="navbar navbar-expand-lg navbar-light bg-light">
<h1 class="navbar-brand">Wikinimous</h1>
<button class="btn btn-outline-primary my-2 my-sm-0" type="submit"><%= link_to "New Article", new_article_path() %></button>
</nav>

<div class="container">
  <% @articles.each do |article| %>
<div class="card" style="width: 56rem;">
  <div class="card-body">
    <h5 class="card-title"><%= article.title %></h5>
    <p class="card-text"><%= article.content %></p>
    <a href="#" class="card-link"><%= link_to "update", edit_article_path(article.id) %></a>
    <a href="#" class="card-link"><%= link_to "delete", article_path(article.id), method: :delete %></a>
  </div>
</div>
<% end %>
</div>
